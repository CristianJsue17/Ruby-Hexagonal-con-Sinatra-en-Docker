source "https://rubygems.org"

ruby "3.3.6"  #cambiado 3.6

gem "pg", "~> 1.2"  #coneccion PostgreSQL

gem 'sinatra'  # Marco minimalista para crear app pequeñas.
gem 'rackup'  # iniciar aplicaciones Rack, que es el middleware base de Sinatra.
gem 'puma' # Servidor de aplicaciones web.

gem 'activerecord' # ORM (Object-Relational Mapping) para manejar bases de datos con Ruby.
gem 'sinatra-activerecord' # Integración de ActiveRecord con Sinatra.
gem 'rake' # Migraciones de bases de datos con Sinatra.
gem 'sinatra-contrib' #Extensiones para Sinatra como manejo de cookies, sesiones

gem 'rerun' # Reinicia automáticamente aplicación cuando cambias un archivo.
gem 'mutex_m' # Exclusión mutua para sincronización de procesos.
gem 'bigdecimal' # Manejo de números decimales de alta precisión.

gem 'carrierwave'  #images, crea carpeta uploads para q se guarde las imagenes.