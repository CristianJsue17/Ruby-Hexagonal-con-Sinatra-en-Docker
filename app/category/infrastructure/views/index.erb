<div class="products-container">
    
    <% if @products.present? %>
        <h2><%= @products.first["category"].capitalize || "Productos" %> - Lista de Productos</h2>
    <div class="product-grid">

            <% @products.each do |product| %>

                <div class="product-card">
                    <h3> 
                        <a href="/products/show/<%= product["id"] %>"><%= product["name"] %></a> 
                    </h3>

                    <% if product["image"] %>
                        <a href="/products/<%= product["id"] %>">
                            <img src="<%= product["image"]["url"]%>" alt="Imagen de <%= product["name"] %>" class="product-image">
                        </a>
                    <% else %>
                        <div class="product-image-placeholder">(Foto del producto)</div>
                    <% end %>
                    <p><strong>Descripción:</strong> <%= product["description"] %></p>
                    <p><strong>Precio:</strong> <%= product["price"] %></p>
                    <p><strong>Marca:</strong> <%= product["brand"] %></p>
                    <p><strong>Stock:</strong> <%= product["stock"] %></p>
                    <!-- Enlace para ver más detalles -->
                    <a href="/products/show/<%= product["id"] %>" class="view-details-button">Ver detalles</a> 
                </div>
            <% end %>

    </div>
    <% else %>
        <p>no hay productos</p>
    <% end %>
</div>