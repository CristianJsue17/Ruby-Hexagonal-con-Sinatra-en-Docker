<!-- Contenedor Principal del Producto -->
  <div class="product-details-container">
    <div class="product-image-section">
        <% if @product["image"] %>
              <a href="/products/show/<%= @product["id"] %>">
                <img src="<%= @product.image.url %>" alt="Imagen de <%= @product["name"] %>" class="product-image">
              </a>
          <% else %>
              <div class="product-image-placeholder">(Foto del producto)</div>
          <% end %>

    </div>

    <div class="product-info-section">
      <h1 class="product-name-title"><%= @product.name %></h1>
      <p><strong>Precio:</strong> <%= @product.price %></p>
      <p><strong>Descripción:</strong> <%= @product.description %></p>

      <!-- Botón de Añadir al Carrito -->
      <div class="add-to-cart-section">
        <label for="product-quantity">Cantidad:</label>
        <select id="product-quantity" name="quantity">
          <% (1..10).each do |qty| %>
            <option value="<%= qty %>"><%= qty %></option>
          <% end %>
        </select>
        <button id="add-to-cart-button" class="add-to-cart" data-product-id="<%= @product.id %>">Añadir al Carrito</button>
      </div>
    </div>
  </div>
  <div class="additional-info">
    <h2 class="details-title">Detalles</h2>
    <p><strong>Material:</strong> <%= @product.material %></p>
    <p><strong>Dimensión:</strong> <%= @product.dimension %></p>
    <p><strong>Peso:</strong> <%= @product.peso %></p>
    <p><strong>Color:</strong> <%= @product.color %></p>
    <p><strong>Características:</strong> <%= @product.caracteristicas %></p>
  </div>
  <div class="related-products">
    <h2>Productos relacionados</h2>
    <div class="related-products-grid">
      <% @related_products.each do |related_product| %>
        <div class="related-product-card">
          <% if related_product["image"] %>

            <a href="/products/show/<%= related_product["id"] %>">
                <img src="<%= related_product.image.url %>" alt="Imagen de <%= @product["name"] %>" class="product-image">
              </a>
          <% else %>
            <div class="related-product-image-placeholder">(Foto del producto)</div>
          <% end %>

          <p>
            <a href="/products/show/1">
                <%= related_product.name %>
            </a>
          </p>
          <p>Precio: <%= related_product.price %></p>
          <p>Marca: <%= related_product.brand %></p>
        </div>
      <% end %>
    </div>
  </div>
