<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Producto</title>
  <style>
    /* Estilos modernos para el formulario de edición de productos */
    body {
      background-color: #e9ecf0;
      font-family: 'Roboto', sans-serif;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 40px;
      color: #333;
    }

    .container {
      width: 100%;
      max-width: 700px;
      position: relative;
    }

    h1 {
      text-align: left;
      color: #333;
      font-size: 28px;
      margin-bottom: 20px;
      font-weight: bold;
      padding-left: 10px;
      border-left: 4px solid #007bff;
      margin-left: 10px;
    }

    .back-link {
      position: absolute;
      top: 10px;
      right: 10px;
      font-size: 14px;
      color: #007bff;
      text-decoration: none;
      font-weight: bold;
      padding: 8px 12px;
      border: 1px solid #007bff;
      border-radius: 5px;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .back-link:hover {
      background-color: #007bff;
      color: #ffffff;
    }

    .product-form {
      width: 100%;
      background: #ffffff;
      padding: 30px 35px;
      border-radius: 12px;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .form-group label {
      font-weight: 500;
      color: #555;
    }

    .input-field {
      width: 100%;
      padding: 12px 15px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 15px;
      background-color: #f9f9f9;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .input-field:focus {
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
      outline: none;
      background-color: #fff;
    }

    .submit-button {
      width: 100%;
      padding: 15px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 8px;
      font-size: 18px;
      cursor: pointer;
      font-weight: bold;
      transition: background-color 0.3s ease;
      box-shadow: 0 4px 10px rgba(0, 123, 255, 0.2);
    }

    .submit-button:hover {
      background-color: #0056b3;
    }

    /* Estilo de las secciones divididas */
    .form-row {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
    }

    .form-column {
      flex: 1;
      min-width: 250px;
    }

    /* Estilo para el selector de archivos */
    .input-file {
      padding: 10px 12px;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 15px;
      background-color: #f9f9f9;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .input-file:hover {
      background-color: #e6e6e6;
    }

    .mini-img{
      width: 50px;
      height: 50px;
      margin-left: auto;
    }
    .alert.alert-success{
      background: #27ac4c;
      padding: 1rem;
      color: white;
      margin-bottom: 1rem;
    }

    /* Estilo para la pantalla pequeña */
    @media (max-width: 768px) {
      .product-form {
        padding: 25px;
      }

      .form-row {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <a href="/admin/products/create/new" class="back-link">Volver a productos</a>
    <h1>Editar Producto</h1>
    <% if @confirmation_message %>
      <div class="alert alert-success" id="alert-success">
        <%= @confirmation_message %>
      </div>
    <% end %>
    <form action="/admin/products/update/<%= @product["id"] %>" method="post" class="product-form" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-column">
                <div class="form-group">
                    <label for="">Nombre del producto</label>
                    <input type="text" class="input-field" placeholder="Ingrese el nombre del producto" value="<%= @product["name"] %>" name="product[name]">
                </div>
                <div class="form-group">
                    <label for="">Descripcion</label>
                    <textarea id="" class="input-field" placeholder="Ingrese una descripcion" name="product[description]"><%= @product["description"] %></textarea>
                </div>
                <div class="form-group">
                    <label for="">Precio</label>
                    <input type="number" class="input-field" placeholder="Ingrese el precio" value="<%= @product["price"] %>" name="product[price]">

                </div>
                <div class="form-group">
                    <label for="">Categoria</label>
                    <input type="text" class="input-field" placeholder="Ingrese la categoria" value="<%= @product["category"] %>" name="product[category]">
                </div>
                <div class="form-group">
                    <label for="">Marca</label>
                    <input type="text" class="input-field" placeholder="Ingrese la marca" value="<%= @product["brand"] %>" name="product[brand]">
                </div>

            </div>
            <div class="form-column">
                <div class="form-group">
                    <label for="">Stock</label>
                    <input type="number" class="input-field" placeholder="Ingrese la cantidad en stock" value="<%= @product["stock"] %>" name="product[stock]">
                </div>

                <div class="form-group">
                    <label for="">Material</label>
                    <input type="text" class="input-field" placeholder="Ingrese el material" value="<%= @product["material"]%>" name="product[material]">
                </div>

                <div class="form-group">
                    <label for="">Dimension</label>
                    <input type="text" class="input-field" placeholder="Ingrese las dimensiones" value="<%= @product["dimension"] %>" name="product[dimension]">
                </div>

                <div class="form-group">
                    <label for="">Peso</label>
                    <input type="text" class="input-field" placeholder="Ingrese el peso" value="<%= @product["price"] %>" name="product[price]">
                </div>

                <div class="form-group">
                    <label for="">color</label>
                    <input type="text" class="input-field" placeholder="Ingrese el color" value="<%= @product["color"] %>" required  name="product[color]">
                </div>
            </div>

        </div>
        <div class="form-group">
            <label for="">Caracteristicas</label>
            <textarea name="" id="" class="input-field" placeholder="Ingrese las caracteristicas" name="product[caracteristicas]"><%= @product["caracteristicas"]%></textarea>
        </div>
        <div class="form-group">
            <label for="">Imagen de producto</label>
            <img src="<%= @product.image.url %>"  class="mini-img">
            <input type="file" class="input-file" name="product[image]">
        </div>
        
        <input type="submit" value="Actualizar Producto" class="submit-button">
    </form>
  </div>
  <script src="/js/main.js"></script>
</body>
</html>