<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Archivos CSS y JavaScript principales -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %> <!-- Este incluye el importmap y por ende `cart.js` -->

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>

  <body>
    <!-- Mostrar mensajes flash -->
    <% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>


    <%= yield %>

    <!-- Carrito desplegable -->
    <div id="cart-overlay" class="cart-overlay">
      <div class="cart-container">
        <button class="close-cart">âœ•</button>
        <h2>Carrito de compra</h2>
        <div id="cart-items">
          <p id="empty-cart-message">No hay productos en el carrito.</p>
        </div>
        <div class="cart-footer">
          <p id="cart-total">Total: S/0.00</p>
          <button id="continue-shopping">Seguir comprando</button>
          <button id="checkout" style="display: none;">Finalizar compra</button>
        </div>
      </div>
    </div>
  </body>
</html>
