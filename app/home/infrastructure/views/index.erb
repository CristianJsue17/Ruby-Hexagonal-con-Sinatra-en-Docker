
  <div class="main-container">
    <!-- Contenedor de Imagen -->
    <div class="image-container">
      <img src="/images/foto4.webp" alt="Bienvenido a CompuFIIS">
      
      <div class="banner">
        <%# <h2>Esto te puede interesar!</h2> %>
        <h2>CompuFiis: Tecnología a tu alcance</h2>
        <p>Tu tienda de confianza para laptops, PC y accesorios con soporte técnico incluido.</p>
      </div>
    </div>
    
    <!-- Contenedor de Productos -->
    <div class="products-container">
      <div class="product-grid">
        <!-- Tarjeta de Producto de Laptop -->
        <div class="product-card">
          <% if @random_laptops[0].present? %>
            <h3><%= @random_laptops[0]["name"] || "Nombre Laptop" %></h3>
          <% if @random_laptops[0]["image"] %>
              <a href="/products/<%= @random_laptops[0]["id"] %>">
                <img src="<%= @random_laptops[0]["image"]["url"] %>" alt="Imagen de <%= @random_laptops[0]["name"] %>" class="product-image">
              </a>
          <% else %>
              <div class="product-image-placeholder">(Foto del producto)</div>
          <% end %>
          <p>Precio: <%= @random_laptops[0]["price"] || "Precio" %></p>
          <p>Marca: <%= @random_laptops[0]["brand"] || "Marca" %></p>
          <p>Stock: <%= @random_laptops[0]["stock"] || "#Stock" %></p>
          <a href="/products/show/<%= @random_laptops[0]["id"] %>" class="view-details-button">Ver detalles</a> 
          <% else %>
            <p>productos no disponibles</p>
          <% end %>
        </div>

